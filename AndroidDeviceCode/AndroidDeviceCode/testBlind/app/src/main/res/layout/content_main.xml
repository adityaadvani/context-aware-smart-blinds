<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"


    android:background="@drawable/mainactivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="com.example.rajkoushik.testblind.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" ------- "
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/temperature"
        android:editable="true"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" ------- "
        android:textStyle="bold"
        android:textSize="25dp"
        android:id="@+id/ambient"
        android:layout_below="@+id/temperature"
        android:layout_alignLeft="@+id/temperature"
        android:layout_alignStart="@+id/temperature"
        android:layout_marginTop="120dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" ------- "
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/blindState"
        android:layout_marginTop="130dp"
        android:layout_below="@+id/ambient"
        android:layout_alignLeft="@+id/ambient"
        android:layout_alignStart="@+id/ambient" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:layout_below="@+id/temperature"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="C"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/switch1"
        android:layout_toLeftOf="@+id/temperature"
        android:layout_toStartOf="@+id/temperature"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="F"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/switch1"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="\u00B0"
        android:id="@+id/textView9"
        android:layout_alignBottom="@+id/switch1"
        android:layout_toLeftOf="@+id/textView7"
        android:layout_toStartOf="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="\u00B0"
        android:id="@+id/textView10"
        android:layout_alignBottom="@+id/switch1"
        android:layout_toRightOf="@+id/temperature"
        android:layout_toEndOf="@+id/temperature" />

</RelativeLayout>
